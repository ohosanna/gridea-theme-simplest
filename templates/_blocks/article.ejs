<article class="<%= item.layout %>">
	<div class="post-content">
		<header>
			<% if (!item.hideInList ) { %>
				<div class="meta">
					<div class="icon">
						<i class="fa fa-file"></i>
					</div>
					<time datetime="<%= item.date %>"><%= item.date %></time>
				</div>
			<% } %>

			<% if (index) { %>
				<h1 class="title" data-role="articleTitle"><a href="<%= item.link %>"><%= item.title %></a></h1>
			<% } else { %>
				<h1 class="title"><%= item.title %></h1>
			<% } %>
		</header>
		<% if (themeConfig.showFeatureImage && item.feature) { %>
			<div class="feature-container" >
				<a class="right" href="<%= item.link %>" style="background-image: url('<%= item.feature %>')">
				</a>
			</div>
		<% } %>
		<div class="entry">
			<% if (item.abstract !== "" && index) { %>
				<%- item.abstract %>
			<% } else { %>
				<%- item.content %>
			<% } %>
		</div>
		<footer class="clearfix">
			<% if (index && item.abstract !== "") { %>
				<div class="read-more">
					<a href="<%= item.link %>#more" class="more-link"><i class="fa fa-ellipsis-h"></i><%= themeConfig.excerpt_link %></a>
				</div>
			<% } %>

			<% if (item.tags && item.tags.length) { %>
				<div class="tags">
					<i class="fa fa-tags"></i>
					<% item.tags.forEach(function(tag) { %>
						<a href="<%= tag.link %>">#<%= tag.name %></a>
					<% }); %>
				</div>
			<% } %>

			<% if (!index) { %>
				<% if (post.nextPost && !post.hideInList) { %>
					<div class="next-post">
					<div class="next">下一篇</div>
					<a href="<%= post.nextPost.link %>">
						<h3 class="post-title">
						<%= post.nextPost.title %>
						</h3>
					</a>
					</div>
				<% } %>
				<% if (typeof commentSetting !== 'undefined' && commentSetting.showComment) { %>
					<% if (commentSetting.commentPlatform === 'gitalk') { %>
					<div id="gitalk-container" data-aos="fade-in"></div>
					<% } %>

					<% if (commentSetting.commentPlatform === 'disqus') { %>
					<div id="disqus_thread" data-aos="fade-in"></div>
					<% } %>
				<% } %>
			<% } %>

		</footer>
	</div>
</article>